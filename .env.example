# Database Configuration
DATABASE_URL=postgresql://sentiment_user:sentiment_pass@localhost:5432/sentiment_db

# Authentication
SECRET_KEY=your-super-secret-key-change-this-in-production

# Redis/Celery
REDIS_URL=redis://localhost:6379/0

# ML Service
ML_SERVICE_URL=http://localhost:5001

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200

# Local Storage (replace AWS S3)
DATA_ROOT=./data
UPLOAD_DIR=./uploads
DUCKDB_PATH=./data/sentiment_platform.duckdb

# Email / SMTP Configuration (for scheduled reports)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-smtp-password
SMTP_USE_TLS=true
REPORTS_FROM_EMAIL=reports@example.com

# Scheduled Report Timing
REPORTS_DAILY_HOUR=8
REPORTS_DAILY_MINUTE=0
REPORTS_WEEKLY_DAY_OF_WEEK=mon
REPORTS_WEEKLY_HOUR=8
REPORTS_WEEKLY_MINUTE=0
